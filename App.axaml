<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MemorizeGame.App"
             xmlns:local="using:MemorizeGame"
             xmlns:styles="using:MemorizeGame.Styles"
             RequestedThemeVariant="Dark">
    <!-- Changed to "Dark" theme variant -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <!-- Add our custom dark theme resources -->
        <styles:DarkTheme/>
    </Application.Styles>
</Application>